{
  "name": "node-fastfy-template",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "ts-node-dev --respawn --transpile-only index.ts",
    "build": "rm -rf ./dist && tsc -p tsconfig.build.json",
    "server": "node ./dist/index.js",
    "migrate:run": "knex migrate:latest",
    "migrate:reset": "knex migrate:rollback",
    "test": "NODE_ENV=test jest --no-chache",
    "test:ci": "NODE_ENV=test DB_HOST=database jest --no-chache"
  },
  "dependencies": {
    "@fastify/cors": "^8.0.0",
    "@fastify/helmet": "^9.1.0",
    "@fastify/response-validation": "^2.0.0",
    "@fastify/swagger": "^7.4.0",
    "fastify": "^4.1.0",
    "http-status-codes": "^2.2.0",
    "knex": "^2.1.0",
    "knex-stringcase": "^1.4.6",
    "mysql2": "^2.3.3",
    "pino-pretty": "^8.1.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.3.0",
    "@types/jest": "^28.1.3",
    "@types/node": "^18.0.0",
    "dotenv": "^16.0.1",
    "jest": "^28.1.1",
    "ts-jest": "^28.0.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  }
}
